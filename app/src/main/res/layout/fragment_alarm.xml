<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AlarmFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_alarms"
        android:textColor="@color/white"
        android:layout_margin="@dimen/dp_30"
        android:textSize="@dimen/dp_24"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/title_alarm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_alarm"
        android:layout_margin="@dimen/dp_20"
        android:text="A004_C Air Source Not Detected"
        android:textColor="@color/white"
        android:id="@+id/msg_alarm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/clear_alarms"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_18"
        android:textStyle="bold"
        android:layout_margin="@dimen/dp_10"
        android:id="@+id/clear_alarm"/>

</RelativeLayout>