<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.FilterFragment"
    android:id="@+id/con_filter">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Filter Reminder"
        android:textColor="@color/textColor_option"
        android:textSize="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_55"
        android:id="@+id/title_filter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/title_filter"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@mipmap/zero_btn"
        android:text="reset to Zero"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/zero_filter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title_filter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="90"
        android:textColor="@color/checked"
        android:textSize="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_46"
        android:id="@+id/time_filter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/time_filter"
        app:layout_constraintBottom_toBottomOf="@+id/time_filter"
        android:text="days life"
        android:textColor="@color/textColor_option"
        android:textSize="@dimen/dp_14"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/time_filter"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_39"
        android:layout_marginLeft="@dimen/dp_219"
        android:textColor="@color/textColor_option"
        android:textSize="@dimen/dp_14"
        android:text="reset to"
        android:id="@+id/reset_filter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/reset_filter"
        app:layout_constraintBottom_toBottomOf="@+id/reset_filter"
        app:layout_constraintLeft_toRightOf="@+id/reset_filter"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@mipmap/days_btn"
        android:text="120 days"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/days_filter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/checked"
        android:id="@+id/save_filter"/>

</android.support.constraint.ConstraintLayout>