<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.CleanFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_112"
        android:src="@mipmap/clean_scroll"
        android:id="@+id/img_clean"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30s"
        android:textSize="@dimen/dp_36"
        app:layout_constraintLeft_toLeftOf="@+id/img_clean"
        app:layout_constraintRight_toRightOf="@+id/img_clean"
        app:layout_constraintTop_toTopOf="@+id/img_clean"
        app:layout_constraintBottom_toBottomOf="@+id/img_clean"
        android:textColor="@color/white"
        android:id="@+id/time_clean"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_clean"
        android:layout_marginTop="@dimen/dp_42"
        android:textColor="@color/white"
        android:text="Clean screen"
        android:background="@mipmap/clean_btnbg"
        android:id="@+id/btn_clean"/>

</android.support.constraint.ConstraintLayout>