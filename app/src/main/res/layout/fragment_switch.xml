<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SwitchFragment">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_99"
        android:layout_marginLeft="@dimen/dp_124"
        android:id="@+id/group_switch"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_ob"
            android:text="O"
            android:textColor="@color/white"
            android:button="@null"
            android:gravity="center"
            android:id="@+id/o_switch"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_ob"
            android:layout_marginLeft="@dimen/dp_124"
            android:text="B"
            android:checked="true"
            android:textColor="@color/white"
            android:button="@null"
            android:gravity="center"
            android:id="@+id/b_switch"/>

    </RadioGroup>

</FrameLayout>