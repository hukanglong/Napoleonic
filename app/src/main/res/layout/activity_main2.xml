<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Main2Activity"
    android:background="@color/backgroud">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_29"
        android:layout_marginLeft="@dimen/dp_34"
        android:src="@mipmap/logon"
        android:id="@+id/logon_head"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_34"
        android:src="@mipmap/noneworking"
        app:layout_constraintTop_toBottomOf="@+id/logon_head"
        android:layout_marginTop="@dimen/dp_142"
        android:id="@+id/working_head"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/working_head"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_29"
        android:background="@mipmap/fanbtnbg"
        android:layout_marginTop="@dimen/dp_73"
        android:id="@+id/set_head"
        android:text="Fan       MANUAL"
        android:textColor="@android:color/white"
        android:drawableRight="@mipmap/triangle"
        android:paddingRight="@dimen/dp_10"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/set_head"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_29"
        android:background="@mipmap/menubtn"
        android:layout_marginTop="@dimen/dp_22"
        android:text="MENU"
        android:textColor="@android:color/white"
        android:id="@+id/menu_head"
        android:layout_marginBottom="@dimen/dp_10"/>

