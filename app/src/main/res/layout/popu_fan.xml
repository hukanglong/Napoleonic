<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioGroup
        android:layout_width="@dimen/dp_600"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/setting_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:visibility="visible">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:text="OFF"
            android:button="@null"
            android:id="@+id/on_btn_main"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/text_color"
            android:text="AUTO"
            android:button="@null"
            android:id="@+id/auto_btn_main"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/text_color"
            android:text="CIRCULATE"
            android:button="@null"
            android:id="@+id/cir_btn_main"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/text_color"
            android:text="HIGN"
            android:button="@null"
            android:id="@+id/high_btn_main"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/text_color"
            android:text="MEDIUM"
            android:button="@null"
            android:id="@+id/medium_btn_main"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/text_color"
            android:text="LOW"
            android:button="@null"
            android:id="@+id/low_btn_main"/>

    </RadioGroup>

</android.support.constraint.ConstraintLayout>
