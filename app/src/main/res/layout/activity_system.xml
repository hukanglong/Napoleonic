<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SystemActivity"
    android:background="@color/backgroud">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/wholebtn_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_158"
        app:layout_constraintRight_toLeftOf="@+id/hvac_system"
        android:drawableTop="@mipmap/heat_icon"
        android:paddingTop="@dimen/dp_30"
        android:id="@+id/dna_system"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hvac_system"
        android:background="@mipmap/wholebtn_bg"
        android:paddingTop="@dimen/dp_30"
        android:drawableTop="@mipmap/hvac_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dna_system"
        android:layout_marginTop="@dimen/dp_158"/>

</android.support.constraint.ConstraintLayout>