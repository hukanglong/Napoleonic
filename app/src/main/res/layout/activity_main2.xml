        app:layout_constraintLeft_toLeftOf="@+id/smll_head"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_76"
        android:background="@mipmap/downc"
        android:id="@+id/up_head"/>

    <Button
