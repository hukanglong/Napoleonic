<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ResetFragment"
    android:id="@+id/rela_reset">

    <TextView
        android:id="@+id/text_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginTop="52dp"
        android:text="Reset to factory default"
        android:textColor="@color/textColor_option"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:layout_toRightOf="@+id/text_reset"
        android:background="@mipmap/slideoff"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_44"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/on_reset"/>

</RelativeLayout>